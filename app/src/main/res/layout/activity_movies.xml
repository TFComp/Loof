<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tinaf.loof.MoviesActivity">

    <ListView
        android:id="@+id/moviesList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moviesList"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:text="Name: " />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moviesList"
        android:layout_toRightOf="@id/descriptionLabel"
        android:ems="10"
        android:inputType="textLongMessage|textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/descriptionLabel"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:text="Description: " />

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/descriptionLabel"
        android:ems="10"
        android:inputType="textLongMessage|textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/episodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:text="Time: " />

    <EditText
        android:id="@+id/episodeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/descriptionLabel"
        android:ems="10"
        android:inputType="textLongMessage|textPersonName"
        android:text="" />

    <Button
        android:id="@+id/addMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/episodeNum"
        android:onClick="onAddClick"
        android:text="Add" />

    <Button
        android:id="@+id/updateMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/episodeNum"
        android:layout_toRightOf="@id/addMovies"
        android:onClick="onUpdateClick"
        android:text="Update" />

    <Button
        android:id="@+id/deleteMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/episodeNum"
        android:layout_toRightOf="@id/updateMovies"
        android:onClick="onDeleteClick"
        android:text="Delete" />
</RelativeLayout>
